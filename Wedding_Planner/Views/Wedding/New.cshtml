@{
    ViewData["Title"] = "New Wedding";
}

@model Wedding


<div class="container">
    <h1 class="text-center">Plan Your Wedding</h1>
    <hr />
    <a href="/dashboard">Dashboard</a>
    <a href="/logout">Logout</a>
    <div class="row mt-5">
        <div class="col-md">
            <form asp-controller="Wedding" asp-action="CreateWedding" method="POST">
                <div class="form-group">
                    <label asp-for="Wedder1"></label>
                    <span asp-validation-for="Wedder1" class="text-danger font-weight-bold"></span>
                    <input asp-for="Wedder1" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Wedder2"></label>
                    <span asp-validation-for="Wedder2" class="text-danger font-weight-bold"></span>
                    <input asp-for="Wedder2" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="WeddingDate"></label>
                    <span asp-validation-for="WeddingDate" class="text-danger font-weight-bold"></span>
                    <input type="Date" asp-for="WeddingDate" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
                    <input asp-for="Address" class="form-control" />
                </div>
                <button class="btn btn-primary">Create</button>
            </form>
        </div>

        <div class="col-md"></div>
    </div>
</div>