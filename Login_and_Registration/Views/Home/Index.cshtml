@{
    ViewData["Title"] = "Login and Registration";
}

@model User

<div class="text-center">
    <h1 class="display-4 mb-4">Login and Registration</h1>
    <div class="container">
        <form action="/register" method="POST">
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                        <label asp-for="FirstName">First Name:</label>
                        <input type="text" asp-for="FirstName">
                    </div>
                    <div class="form-group">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                        <label asp-for="LastName">Last Name:</label>
                        <input type="text" asp-for="LastName">
                    </div>
                    <div class="form-group">
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <label asp-for="Email">Email:</label>
                        <input type="text" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Sign up Now">
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <label asp-for="Password">Password:</label>
                        <input type="text" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <span class="text-danger" asp-validation-for="Confirm"></span>
                        <label asp-for="Confirm">Confirm:</label>
                        <input type="text" asp-for="Confirm">
                    </div>
                </div>
                <div class="col-sm">
                    <a href="/login" class="btn btn-secondary">Login</a>
                </div>
            </div>
        </form>
    </div>
</div>
