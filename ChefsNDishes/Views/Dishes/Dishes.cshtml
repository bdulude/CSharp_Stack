@{
    ViewData["Title"] = "Chefs N Dishes";
}
@model List<Dish>

<div class="text-center">
    <h1 class="display-4 mb-4"><a href="/">Chefs</a> | Dishes</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md">
            <h5>Yum, take a look at our tasty dishes!</h5>
            <hr>
            <table class="table">
                <thead>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </thead>
                <tbody>
                @foreach (Dish dish in Model)
                {
                    <tr>
                        <td>
                            @dish.Name
                        </td>
                        <td>
                            @dish.Chef.FirstName @dish.Chef.LastName
                        </td>
                        <td>
                            @dish.Tastiness
                        </td>
                        <td>
                            @dish.Calories
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-md">
            <a class="btn btn-success" href="/dishes/new">Add a Dish</a>
        </div>
    </div>
</div>