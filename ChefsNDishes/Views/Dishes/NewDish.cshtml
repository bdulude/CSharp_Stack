@{
    ViewData["Title"] = "New Dish";
}

@model Dish

<div class="container">
    <a href="/dishes">Home</a>
    <form action="/dishes/create" method="POST">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <label asp-for="Name">Name of Dish:</label>
                    <input type="text" asp-for="Name">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Calories"></span>
                    <label asp-for="Calories"># of Calories:</label>
                    <input type="number" min="0" asp-for="Calories">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" cols="32" rows="5"></textarea>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="ChefId"></span>
                    <label asp-for="ChefId">Chef's Name:</label>
                    <select asp-for="ChefId">
                        @foreach (var chef in ViewBag.Chefs)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    </select>

                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness">Dish Tastiness:</label>
                    <select asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Dish">
                </div>
            </div>
        </div>
    </form>
</div>