@{
    ViewData["Title"] = "Edit Dish";
}

@model Dish

<div class="container">
    <form action="/create" method="POST">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Chef"></span>
                    <label asp-for="Chef">Chef's Name:</label>
                    <input type="text" asp-for="Chef" value="@ViewBag.RetrievedDish.Chef">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <label asp-for="Name">Name of Dish:</label>
                    <input type="text" asp-for="Name" value="@ViewBag.RetrievedDish.Name">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Calories"></span>
                    <label asp-for="Calories"># of Calories:</label>
                    <input type="number" min="0" asp-for="Calories" value="@ViewBag.RetrievedDish.Calories">
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness">Dish Tastiness:</label>
                    <select asp-for="Tastiness">\
                        @if (ViewBag.RetrievedDish.Tastiness == 1)
                        {
                            <option value="1" selected="selected">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        }
                        @if (ViewBag.RetrievedDish.Tastiness == 2)
                        {
                            <option value="1">1</option>
                            <option value="2" selected="selected">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        }
                        @if (ViewBag.RetrievedDish.Tastiness == 3)
                        {
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3" selected="selected">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        }
                        @if (ViewBag.RetrievedDish.Tastiness == 4)
                        {
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4" selected="selected">4</option>
                            <option value="5">5</option>
                        }
                        @if (ViewBag.RetrievedDish.Tastiness == 5)
                        {
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5" selected="selected">5</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" cols="32" rows="5">
                        @ViewBag.RetrievedDish.Description
                        this dumb POS won't work
                    </textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Dish">
                </div>

                <TEXtarea cols="32" rows="5">But works without asp-for:
@ViewBag.RetrievedDish.Description</TEXtarea>
            </div>
        </div>
    </form>
</div>